<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--        Tree view for Department history-->
         <record id="department_history_view_tree" model="ir.ui.view">
            <field name="name">department.history.view.tree</field>
            <field name="model">department.history</field>
            <field name="arch" type="xml">
                <tree create="0" import="false">
                    <field name="employee_id" column_invisible="True"/>
                    <field name ="employee_name" column_invisible="True"/>
                    <field name="changed_field"/>
                    <field name="updated_date"/>
                    <field name="current_value"/>
                </tree>
            </field>
        </record>
</odoo>

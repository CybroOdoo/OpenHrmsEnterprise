<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--        Inheriting hr employee form view to add history buttons-->
        <record id="view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit.ent.history.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="history" string="Employee History">
                        <group>
                            <group>
                                <button type="object" name="department_details"
                                        class="oe_highlight">Job/Department History
                                </button>
                            </group>
                            <group>
                                <button type="object" name="salary_history"
                                        class="oe_highlight">Salary History
                                </button>
                            </group>
                        </group>
                        <group>
                            <group>
                                <button type="object" name="contract_history"
                                        class="oe_highlight">Contract History
                                </button>
                            </group>
                            <group>
                                <button type="object" name="time_sheet"
                                        class="oe_highlight">Timesheet Cost
                                </button>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
</odoo>
